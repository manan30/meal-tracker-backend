{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    // "sourceRoot": "src",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/types", "node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
